source 'https://rubygems.org'
ruby '2.1.1'

gem 'rails', '4.1.0'
gem 'unicorn'

# DBs
gem 'pg'

# Assets
gem 'sass-rails', '~> 4.0.0'
gem 'uglifier', '>= 1.3.0'
gem 'coffee-rails', '~> 4.0.0'
gem 'jquery-rails'
gem 'jbuilder', '~> 1.2'

# View
gem 'slim'
gem 'slim-rails'
gem 'simple_form', github: 'plataformatec/simple_form'
gem 'draper', '~> 1.0'

# Pinging Heroku
gem 'newrelic_rpm'

# Authorization
gem 'bcrypt-ruby'

# Factories
gem 'factory_girl_rails'

# Coverage
gem 'coveralls', require: false
gem 'simplecov', '~> 0.7.1'

group :production do
  gem 'rails_12factor'
end

group :development, :test do
  gem 'rspec-rails'
  gem 'better_errors'
  gem 'binding_of_caller'
  gem 'pry'
  gem 'pry-rails'
end

group :test do
  gem 'rspec-pride'
end
